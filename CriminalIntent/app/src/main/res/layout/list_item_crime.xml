<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkBox_listItemCrime_solved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/textView_listItemCrime_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/checkBox_listItemCrime_solved"
        android:padding="4dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_listItemCrime_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_listItemCrime_title"
        android:layout_toLeftOf="@id/checkBox_listItemCrime_solved"
        android:textStyle="bold"/>
</RelativeLayout>